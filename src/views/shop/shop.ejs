<%- contentFor('body') %> 
    <!-- MAIN START -->
    <main class="shop__content container">
      <!-- ASIDE START-->
      <!-- RETOCAR Y CONTROLAR/CORREGIR ESTILOS DEL ASIDE -->
      <aside class="form-shop">
        <form class="form-shop__content" method="POST" target="blank">
          <div class="form-shop__content-search">
            <label for="search" id="search">Buscar</label>
            <input
              type="search"
              name="search"
              id="search"
              placeholder="Ítem o categoría"
            />
          </div>
          <div class="form-shop__content-order">
            <label for="order" id="order">Ordenar por</label>
            <select name="order" id="order">
              <option value="Mayor a menor">Mayor a menor</option>
              <option value="Menor a mayor">Menor a mayor</option>
            </select>
          </div>
          <div class="form-shop__content-price">
            <label for="price" id="price">Precio</label>
            <section class="form-shop__content-price-options">
              <p>min</p>
              <input type="number" id="price" name="minPrice" value="0" />
              <p>- max</p>
              <input type="number" id="price" name="maxPrice" value="0" />
            </section>
          </div>
          <div class="form-shop__content-filter">
            <label for="filter" id="filter">Filtrar</label>
            <section>
              <label>
                <input type="checkbox" name="filterNew" id="filter" /> Nuevos
              </label>
              <label>
                <input type="checkbox" name="filterPromotions" id="filter" />
                Ofertas
              </label>
              <label>
                <input
                  type="checkbox"
                  name="filterSpecialEdition"
                  id="filter"
                />
                Edición especial
              </label>
              <label>
                <input type="checkbox" name="filterFavs" id="filter" />
                Favoritos
              </label>
            </section>
          </div>
        </form>
      </aside>
      <!-- RETOCAR Y CONTROLAR/CORREGIR ESTILOS DEL ASIDE ^^^^^^-->
      <!-- ASIDE END-->

      <!-- MAIN CATALOGUE START -->
      <section class="itmes-layout">
        <% productos.forEach(producto => { %>
          <article class="card-item">
              <a class="card-item__link" href="/">
                <picture class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img
                    class="card-item__img-front"
                    src="/uploads/producto_<%= producto.id %>.jpg"
                    alt="<%= producto.nombre %>"
                  />
                  <img
                    class="card-item__img-back"
                    src="../../img/star-wars/trooper-box.webp"
                    alt="<%= producto.nombre %>"
                  />
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= producto.category %></p>
                  <h4 class="card-item__name"><%= producto.nombre %></h4>
                  <p class="card-item__price"><%= producto.itemPrice %></p>
                  <p class="card-item__promotion">3 cuotas sin interés</p>
                </div>
              </a>
            </article>
            <% }); %>
      </section>
      <!-- MAIN CATALOGUE END -->

      <!--FALTA AGREGAR PAG.SIGUIENTE PARA ITEMS DE COMPRA -->
    </main>
