<%- contentFor('body') %>
    <!-- MAIN START -->
    <main>
      <section>
        <section class="container-create">
        <h2 class="page__title">Editar Item</h2>
        <!-- Renderiza los errores si existieran -->
        <% if (typeof errors != 'undefined') { %>
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
          </ul>
          <% } %>
          
        <form action="/admin/edit/<%= values.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div>

            <label for="category" class="letter1 spaces">Categoría:</label>
            <select name="category" id="category" class="spaces style" value="<%= values.category %>">
              <option value=""></option>
              <option value="funko-pop">Figuras</option>
              <option value="remera">Remeras</option>
              <option value="llavero">Llaveros</option>
            </select>

            <label for="licence"class="letter1 spaces" >Licencia:</label>
            <select name="licence" id="licence" class="spaces style" required value="<%= values.licence %>">
              <option value=""></option>
              <option value="harry-potter">Harry Potter</option>
              <option value="naruto-shippuden">Naruto Shippuden</option>
              <option value="pokemon">Pokemon</option>
              <option value="star-wars">Star Wars</option>
            </select>

          </div>

          <div class="spaces">
            <label for="nombre" class="letter2 spaces">Nombre del producto:</label>
            <input
              type="text"
              id="nombre"
              name="nombre"
              class="bottom_border spaces"
              value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
              required
              minlength="3"
            />
          </div>

          <div>
            <textarea
              name="itemDescription"
              id="itemDescription"
              cols="89"
              rows="10"
              class="spaces"
              value="<%= values.itemDescription %>"></textarea>
          </div>

          <div>
            <label for="skuItem" class="letter2 spaces mayus">sku:</label>
            <input
              type="text" id="skuItem" name="skuItem"
              class="bottom_border1 spaces"
              value="<%= typeof values != 'undefined' ? values.skuItem : '' %>"
              required
            />

            <label for="itemPrice" class="letter2 spaces">Precio:</label>
            <input
              type="text"
              id="itemPrice"
              name="itemPrice"
              placeholder="$ 0.000,00"
              class="bottom_border1 spaces"
              value="<%= typeof values != 'undefined' ? values.itemPrice : '' %>"
              required
              min="1"
            />

            <label for="itemStock" class="letter2 spaces">Stock:</label>
            <input
              type="text"
              id="itemStock"
              name="itemStock"
              placeholder="0"
              class="bottom_border2 spaces"
              value="<%= typeof values != 'undefined' ? values.itemStock : '' %>"
              required
              min="1"
            />
          </div>

          <div>
            <label for="discount" class="letter2 spaces">Descuento:</label>
            <input
              type="text"
              id="discount"
              name="discount"
              placeholder="0%"
              class="bottom_border2 spaces"
              value="<%= typeof values != 'undefined' ? values.discount : '' %>"
              min="1"
            />

            <label for="cuotas" class="letter2 spaces">Cuotas:</label>
            <select name="cuotas" id="cuotas"class="spaces style">
              <option value="3">3 Cuotas sin interés</option>
              <option value="6" selected>6 Cuotas sin interés</option>
              <option value="12">12 Cuotas sin interés</option>
              <option value="24">24 Cuotas sin interés</option>
            </select>
          </div>

          <!-- TODO: Obtener la ruta personalizada de la imagen -->
          <div>
            <label for="imagen"class="letter2 spaces">Imágenes:</label>
            <input type="file" id="imagen" name="imagen" multiple class="spaces"/>
          </div>


          <section>

            <div class="container_img">  
              <div>
                <img
                  src="/uploads/producto_<%= values.id %>.jpg"
                  alt="<%= values.nombre %>"
                  class="img_edit"/> 
              </div>
              <div>
                <p class="img_letter border_top">Frente</p>
              </div>
            </div>

            <div class="container_img">
              <div>
                <img
                  src="../../img/naruto/kakashi_hatake_back.svg"
                  alt="Figura coleccionable Funko Pop de Hatake Kakashi de la saga de Naruto Shippuden en caja."
                  class="img_edit"/>
              </div>
              <div>
                <p class="img_letter border_top">Dorso</p>
              </div>
            </div>

          </section>

          <div class="container-agregar">
            <input type="submit" value="Modificar Producto" class="red_button1"/>
          </div>

        </form>
      </section>
    </main>
    <!-- MAIN END -->
