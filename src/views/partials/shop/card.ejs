<% productos.forEach(producto => { %>
<article class="card-item">
    <a class="card-item__link" href="/shop/item/<%= producto.id %>">
      <picture class="card-item__cover">
        <span class="card-item__tag">Nuevo</span>
        <img
          class="card-item__img-front"
          src="/uploads/producto_<%= producto.id %>.webp"
          alt="<%= producto.nombre %>"
        />
        <img
          class="card-item__img-back"
          src="../../img/star-wars/trooper-box.webp"
          alt="<%= producto.nombre %>"
        />
      </picture>
      <div class="card-item__content">
        <p class="card-item__licence"><%= producto.category %></p>
        <h4 class="card-item__name"><%= producto.nombre %></h4>
        <p class="card-item__price"><%= producto.itemPrice %></p>
        <p class="card-item__promotion">3 cuotas sin inter√©s</p>
      </div>
    </a>
  </article>
  <% }); %>
